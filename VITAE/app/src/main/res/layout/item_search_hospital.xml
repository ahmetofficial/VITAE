<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:id="@+id/hospital_search_item"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:clickable="true"
                                    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/search_item_hospital_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/search_item_hospital_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/search_item_hospital_type_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/search_item_hospital_name_text"
            android:layout_marginBottom="10dp"
            android:textSize="12sp"/>

        <me.zhanghai.android.materialratingbar.MaterialRatingBar
            android:id="@+id/search_item_hospital_rating_bar"
            style="@style/Widget.MaterialRatingBar.RatingBar.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:isIndicator="true"
            android:layout_below="@+id/search_item_hospital_type_text"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>