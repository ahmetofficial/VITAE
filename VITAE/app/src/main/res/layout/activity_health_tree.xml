<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/hospital_page_background"
                tools:context="com.project.ui.userhealthtree.UserHealthTreeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1">

            <ImageView
                android:id="@+id/health_tree_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_barley_white_48dp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/health_tree_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_health_tree"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:textSize="20dp"
                android:layout_below="@+id/health_tree_icon"/>

            <com.diegodobelo.expandingview.ExpandingList
                android:id="@+id/health_tree_expanding_list"
                android:layout_width="match_parent"
                android:layout_below="@+id/health_tree_text"
                android:layout_marginTop="5dp"
                android:layout_height="match_parent"/>
        </RelativeLayout>

    </ScrollView>
</RelativeLayout>