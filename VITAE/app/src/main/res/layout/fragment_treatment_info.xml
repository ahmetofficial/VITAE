<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/activity_treatment_add_relative_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/border_treatment_round">

                <TextView
                    android:id="@+id/activity_treatment_add_disease_name_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:textColor="@color/primaryDarkText"
                    android:textSize="20dp"/>

            </RelativeLayout>

        <RelativeLayout
            android:id="@+id/activity_treatment_add_relative_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/activity_treatment_add_relative_top"
            android:background="@drawable/border_treatment_round">

            <TextView
                android:id="@+id/activity_treatment_add_treatment_name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:textColor="@color/primaryDarkText"
                android:textSize="20dp"/>

        </RelativeLayout>

            <LinearLayout
                android:id="@+id/activity_treatment_add_linear_layout_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_treatment_add_relative_bottom"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/signup_roundwhite"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:paddingLeft="10dp"
                    android:src="@drawable/icon_start_date_green"/>

                <TextView
                    android:id="@+id/activity_treatment_add_start_date_text"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:hint="@string/treatment_start_date"
                    android:onClick="onClick"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:textColor="@color/primaryDarkText"
                    android:textColorHint="@color/primaryDarkText"
                    android:textSize="13dp"
                    />
            </LinearLayout>

            <Button
                android:id="@+id/activity_treatment_add_save_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_treatment_add_linear_layout_date"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:background="@drawable/button_green_round"
                android:padding="10dp"
                android:text="@string/save"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse"
                />

        </RelativeLayout>

</LinearLayout>