<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimaryDark"/>
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/container"
        android:fillViewport="true">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@color/colorPrimaryDark">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@color/colorPrimaryDark"
                        >

                    </LinearLayout>

                    <!-- Profile picture -->
                    <com.alexzh.circleimageview.CircleImageView
                        android:id="@+id/patient_profile_picture"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="0dp"
                        app:view_borderColor="#cccccc"
                        app:view_borderWidth="2dp"/>

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/patient_profile_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="0dp"
                        android:textColor="@color/brightText"
                        android:textSize="22sp"/>

                    <TextView
                        android:id="@+id/patient_profile_user_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/primaryText"
                        android:textSize="14sp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/patient_profile_about_me_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_marginLeft="40dp"
                            android:layout_marginRight="5dp"
                            android:layout_alignTop="@+id/patient_profile_about_me"
                            android:src="@drawable/ic_format_quote_open_white_18dp"/>

                        <TextView
                            android:id="@+id/patient_profile_about_me"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="50dp"
                            android:layout_marginTop="20dp"
                            android:layout_toRightOf="@+id/patient_profile_about_me_icon"
                            android:textAlignment="center"
                            android:textColor="@color/secondaryText"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/patient_profile_follow_button"
                            android:layout_width="200dp"
                            android:layout_below="@id/patient_profile_about_me"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/profile_round"
                            android:gravity="center"
                            android:layout_centerHorizontal="true"
                            android:padding="10dp"
                            android:textAlignment="center"
                            android:clickable="true"
                            android:textColor="@color/secondaryText"/>


                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:id="@+id/patient_profile_post_upper_line"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginTop="20dp"
                    android:background="#ACACAC"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/patient_profile_post_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/patient_profile_post_upper_line"
                        android:isScrollContainer="false"
                        android:stretchMode="columnWidth"
                        android:verticalSpacing="3dp"/>

                </RelativeLayout>


            </LinearLayout>

        </TableLayout>

    </ScrollView>

</RelativeLayout>